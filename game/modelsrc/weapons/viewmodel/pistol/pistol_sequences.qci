$sequence "deploy" {
	"pistol\deploy.smd"
	activity "ACT_VM_DRAW" -1
	fadein 0.1
	fadeout 0.1
	node "0"
	fps 60
}

$sequence "deploy_empty" {
	"pistol\deploy_empty.smd"
	activity "ACT_VM_DRAW_EMPTY" -1
	fadein 0.1
	fadeout 0.1
	node "0"
	fps 60
}

$sequence "reload" {
	"pistol\reload.smd"
	activity "ACT_VM_RELOAD" -1
	{ event AE_CL_PLAYSOUND 18 "Weapon_Pistol_ZM.Reload1" }
	{ event AE_CL_PLAYSOUND 60 "Weapon_Pistol_ZM.Reload2" }
	{ event AE_CL_PLAYSOUND 89 "Weapon_Pistol_ZM.Reload3" }
	{ event AE_WPN_INCREMENTAMMO 62 "" }
	fadein 0.1
	fadeout 0
	node "0"
	fps 60
}

$sequence "reload_empty" {
	"pistol\reload_empty.smd"
	activity "ACT_VM_RELOAD_EMPTY" -1
	{ event AE_CL_PLAYSOUND 18 "Weapon_Pistol_ZM.Reload1" }
	{ event AE_CL_PLAYSOUND 60 "Weapon_Pistol_ZM.Reload2" }
	{ event AE_CL_PLAYSOUND 89 "Weapon_Pistol_ZM.Reload3" }
	{ event AE_WPN_INCREMENTAMMO 62 "" }
	fadein 0.1
	fadeout 0
	node "0"
	fps 60
}
